{
  "name": "opendi/lang",
  "type": "library",
  "description": "PHP Language extensions",
  "keywords": [
    "lang",
    "date"
  ],
  "homepage": "https://github.com/opendi/lang",
  "authors": [
    {
      "name": "Opendi AG",
      "email": "info@opendi.com",
      "homepage": "http://www.opendi.com/",
      "role": "Developer"
    }
